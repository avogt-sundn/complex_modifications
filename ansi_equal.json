{
    "title": "ANSI Gleich",
    "rules": [
        {
            "description": "ANSI Gleich",
            "manipulators": [
                // =
                {
                    "type": "basic",
                    "from": {
                        "key_code": "equal_sign"
                    },
                    "to": [
                        {
                            "key_code": "0",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ]
                },
                // +
                {
                    "type": "basic",
                    "from": {
                        "key_code": "equal_sign",
                        "modifiers": {
                            "mandatory": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "close_bracket",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}