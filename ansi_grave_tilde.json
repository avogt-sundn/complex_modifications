{
    "title": "ANSI Tilde",
    "rules": [
        {
            "description": "ANSI Tilde",
            "manipulators": [
                // `
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde"
                    },
                    "to": [
                        {
                            "key_code": "equal_sign",
                            "modifiers": [
                                "shift"
                            ]
                        }
                    ]
                },
                // ~
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}