{
    "title": "ANSI Angles",
    "rules": [
        {
            "description": "ANSI Angles",
            "manipulators": [
                // <
                {
                    "type": "basic",
                    "from": {
                        "key_code": "comma",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde"
                        }
                    ]
                },
                // >
                {
                    "type": "basic",
                    "from": {
                        "key_code": "period",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "shift"
                            ]
                        }
                    ]
                },
                // /
                {
                    "type": "basic",
                    "from": {
                        "key_code": "slash"
                    },
                    "to": [
                        {
                            "key_code": "7",
                            "modifiers": [
                                "shift"
                            ]
                        }
                    ]
                },
                // ?
                {
                    "type": "basic",
                    "from": {
                        "key_code": "slash",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "hyphen",
                            "modifiers": [
                                "shift"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}