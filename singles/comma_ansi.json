{
    "title": "ANSI Semikolon und Komma",
    "rules": [
        {
            "description": "ANSI Semikolon und Komma",
            "manipulators": [
                // Semicolon ; = Shift + comma
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon"
                    },
                    "to": [
                        {
                            "key_code": "comma",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ]
                },
                // doppelpunkt
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "period",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote"
                    },
                    "to": [
                        {
                            "key_code": "comma"
                        }
                    ]
                },
                // anfuehrungszeichen
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "2",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}