{
    "title": "ANSI Hyphen",
    "rules": [
        {
            "description": "ANSI hyphen",
            "manipulators": [
                // -
                {
                    "type": "basic",
                    "from": {
                        "key_code": "hyphen"
                    },
                    "to": [
                        {
                            "key_code": "slash"
                        }
                    ]
                },
                // _
                {
                    "type": "basic",
                    "from": {
                        "key_code": "hyphen",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "slash",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}